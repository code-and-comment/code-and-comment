{
  "name": "code-and-comment",
  "version": "0.3.27",
  "author": "38elements",
  "description": "PWA to add comment to Github file.",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:minify",
    "build:dev": "webpack --config webpack.config.js",
    "build:css": "node-sass src/scss/index.scss dist/app.css --output-style compressed",
    "build:js": "rollup -c && rollup -c -i src/jsx/repositories.jsx -o dist/repositories.js && rollup -c -i src/jsx/codeAndComments.jsx -o dist/codeAndComments.js",
    "build:minify": "terser dist/app.js -c -m --ecma 8 -o dist/app.min.js && terser dist/repositories.js -c -m --ecma 8 -o dist/repositories.min.js && terser dist/codeAndComments.js -c -m --ecma 8 -o dist/codeAndComments.min.js",
    "fix": "eslint src/jsx/**/*.jsx src/jsx/**/*.tsx test/**/*.js --fix",
    "lint": "eslint src/jsx/**/*.jsx src/jsx/**/*.tsx test/**/*.js",
    "test": "mocha --recursive test --reporter spec"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.0",
    "@types/tapable": "^1.0.4",
    "@types/webpack": "^4.4.35",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "css-loader": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.0",
    "eslint-plugin-react": "^7.14.1",
    "fork-ts-checker-webpack-plugin": "^1.4.2",
    "jsdom": "^15.0.0",
    "jsdom-global": "^3.0.2",
    "mini-css-extract-plugin": "^0.7.0",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "rollup": "^1.16.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "sass-loader": "^7.1.0",
    "sinon": "^7.2.2",
    "source-map-loader": "^0.2.4",
    "terser": "^4.0.0",
    "typescript": "^3.5.3",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "history": "^4.9.0",
    "js-base64": "^2.5.1",
    "marked": "^0.7.0",
    "preact": "10.0.0-rc.1",
    "preact-router": "^3.0.0",
    "unistore": "^3.4.1"
  }
}
