{
  "name": "code-and-comment",
  "version": "0.0.3",
  "author": "38elements",
  "description": "Code and Comment is the application to add the comments to a file in Github.",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:minify",
    "build:css": "node-sass src/scss/index.scss dist/app.css --output-style compressed",
    "build:js": "rollup -c",
    "build:minify": "terser dist/app.js -c --ecma 8 -o dist/app.min.js",
    "lint": "eslint src/jsx/*.jsx test/**/*.js",
    "test": "mocha --require @babel/register --recursive test --reporter spec"
  },
  "license": "MIT License",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "eslint-plugin-react": "^7.11.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "rollup": "^0.65.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "sinon": "^7.1.1",
    "terser": "^3.10.0"
  },
  "dependencies": {
    "history": "^4.7.2",
    "js-base64": "^2.4.9",
    "marked": "^0.5.1",
    "preact": "^8.3.1",
    "preact-router": "^2.6.1",
    "unistore": "^3.1.0"
  }
}
